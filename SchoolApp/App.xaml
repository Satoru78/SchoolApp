<Application x:Class="SchoolApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolApp"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="MainBackground">
            <SolidColorBrush.Color>
                <Color R="255" G="255" B="255" A="255"></Color>
            </SolidColorBrush.Color>
        </SolidColorBrush>
        
        <SolidColorBrush x:Key="SecondBackground">
            <SolidColorBrush.Color>
                <Color R="231" G="250" B="191" A="255"></Color>
            </SolidColorBrush.Color>
        </SolidColorBrush>
        
        <SolidColorBrush x:Key="WarnBackground">
            <SolidColorBrush.Color>
                <Color R="4" G="160" B="255" A="255"></Color>
            </SolidColorBrush.Color>
        </SolidColorBrush>
        
        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="2"></Setter>
        </Style>
        
        <Style TargetType="Window" x:Key="Default">
            <Setter Property="FontFamily" Value="Comic Sans M"></Setter>
            </Style>
       
    </Application.Resources>
</Application>
